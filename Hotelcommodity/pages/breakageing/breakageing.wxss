.linenmains{
  display:inline-block;
  width:100%;
  margin-top:10px;
  text-align:center;
}
.linenmains text{
  display:inline-block;
  line-height:30px;
  width:100%;
}
input.input{
  border:1px solid #ccc;
  height:30px;
  line-height:30px;
  display:inline-block;
  padding:0 10px;
  margin-top:5px;
  min-width:170px;
}
.picker{
  border:1px solid #ccc;
  line-height:30px;
  min-width:150px;
  display:inline-block;
  height:30px;
  position:relative;
  text-align:left;
  padding:0 30px 0 10px;
}
.tarea{
  border:1px solid #ccc;
  display:inline-block;
  width:100%;
  line-height:20px;
  padding:10px;
  margin-top:10px;
  height:90px;
}
.remarksinfo{
  display:inline-block;
  margin:20px;
  width:80%;
}
.btnmtmain button{
  margin-top:10px;
}
image.downimage{
  display:inline-block;
  width:17px;
  height:17px;
  position:absolute;
  right:6px;
  top:10px;
}
button.reimburse{
  margin-top:5px;
}