}
.linennums{
  float:right;
  margin-right:20rpx;
}
.scanbtn{
  font-size:30rpx;
  float:right;
  display:inline-block;
  color:#54C947;
  background:none;
  min-width:20%;
}
.scanbtn.active{
  color:#333;
}