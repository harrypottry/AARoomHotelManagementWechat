.roomswrapper{
  padding:16rpx 18rpx;
  line-height:52rpx;
}
.roomswrapper .roomnums{
  font-size:40rpx;
  font-weight:bold;
  display:inline-block;
  width:100%;
}
.roomswrapper .taskinfo{
  font-weight:bold;
  display:inline-block;
  width:100%;
  font-size:34rpx;
}
.allocationdetail{
